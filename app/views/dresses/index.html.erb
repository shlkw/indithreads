<p id="notice"><%= notice %></p>

<h1>Dresses</h1>



  <%= form_tag(dresses_path, method: :get) do %>
    Title: <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
   <% end %> 


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dresses.each do |dress| %>
      <tr>
        <td><%= dress.title %></td>
        <td><%= dress.description %></td>
        <td><%= dress.text %></td>
        <td><%= dress.price %></td>
        <td><%= link_to 'Show', dress %></td>
        <td><%= link_to 'Edit', edit_dress_path(dress) %></td>
        <td><%= link_to 'Destroy', dress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dress', new_dress_path %>


